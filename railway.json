{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd backend && chmod +x mvnw && ./mvnw clean package -DskipTests"
  },
  "deploy": {
    "startCommand": "cd backend && java -Dserver.port=${PORT:-8080} -jar target/*.jar",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}