{
  "name": "plateful",
  "version": "0.0.1",
  "description": "Plateful - Full-stack restaurant discovery application",
  "private": true,
  "scripts": {
    "install:frontend": "cd frontend && npm install",
    "install:all": "npm run install:frontend && npm install concurrently && cd backend && (./mvnw install -DskipTests || mvnw.cmd install -DskipTests)",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && (./mvnw spring-boot:run || mvnw.cmd spring-boot:run)",
    "dev:all": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\" --names \"FRONTEND,BACKEND\" --prefix-colors \"cyan,magenta\"",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && (./mvnw clean package -DskipTests || mvnw.cmd clean package -DskipTests)",
    "build:all": "concurrently \"npm run build:frontend\" \"npm run build:backend\" --names \"FRONTEND,BACKEND\" --prefix-colors \"cyan,magenta\"",
    "build:sequential": "npm run build:frontend && npm run build:backend",
    "test:frontend": "cd frontend && npm run test",
    "test:backend": "cd backend && (./mvnw test || mvnw.cmd test)",
    "test:all": "concurrently \"npm run test:frontend\" \"npm run test:backend\" --names \"FRONTEND,BACKEND\" --prefix-colors \"cyan,magenta\"",
    "lint:frontend": "cd frontend && npm run lint",
    "clean:frontend": "cd frontend && rm -rf dist node_modules",
    "clean:backend": "cd backend && (./mvnw clean || mvnw.cmd clean)",
    "clean:all": "npm run clean:frontend && npm run clean:backend",
    "preview:frontend": "cd frontend && npm run preview",
    "start": "npm run dev:all"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.11",
    "@tomtom-international/web-sdk-maps": "^6.25.0",
    "framer-motion": "^12.23.12",
    "lucide-react": "^0.540.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hot-toast": "^2.6.0",
    "react-icons": "^5.5.0",
    "react-qr-code": "^2.0.18",
    "react-router-dom": "^7.8.1",
    "tailwindcss": "^4.1.11"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/UOA-DCML/se310-plateful.git"
  },
  "keywords": [
    "restaurant",
    "search",
    "full-stack",
    "spring-boot",
    "react",
    "vite"
  ],
  "author": "UOA DCML",
  "license": "MIT"
}